{
  "name": "@visualsource/react-use-paho-mqtt",
  "version": "1.0.3",
  "type": "module",
  "description": "React Wrapper for the the javascript Paho MQTT library",
  "readme": "README.md",
  "author": "VisualSource",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "mqtt",
    "react",
    "paho",
    "useMqtt"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/VisualSource/react-use-paho-mqtt"
  },
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    "import": "./dist/index.js"
  },
  "scripts": {
    "test": "vitest",
    "test:cli": "vitest run",
    "build:docs": "typedoc lib/index.ts",
    "dev": "vite",
    "build": "tsc && vite build -- --demo",
    "build:lib": "tsc --p ./tsconfig.build.json && vite build",
    "preview": "vite preview",
    "check": "biome check --write ./lib",
    "prepublishOnly": "pnpm build:lib"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.1.0",
    "@types/paho-mqtt": "^1.0.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "jsdom": "^24.1.1",
    "react-dom": "^18.3.1",
    "typedoc": "^0.26.5",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "paho-mqtt": ">=1",
    "react": ">=18"
  }
